<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieLibrary.Views.NewItemPage"
             Title="New Item">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Title" FontSize="Medium" />
            <Entry Text="{Binding Title, Mode=TwoWay}" FontSize="Medium" />
            <Label Text="Released" FontSize="Medium" />
            <DatePicker Date="{Binding Released, Mode=TwoWay}" FontSize="Medium" Margin="0" />
            <Label Text="Mediaformat" FontSize="Medium" />
            <Entry Text="{Binding Mediaformat, Mode=TwoWay}" FontSize="Medium" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>